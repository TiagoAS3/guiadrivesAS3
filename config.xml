<?xml version='1.0' encoding='utf-8'?>
<widget id="com.as3engenharia.guiadrivesas3" version="1.6.7" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Guia Drives AS3</name>
    <description>
        Descrição do app.
    </description>
    <author email="contato@as3engenharia.com.br" href="http://www.as3engenharia.com.br/">
        AS3 Engenharia
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-targetSdkVersion" value="29" />
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="SplashScreen" value="splash" />


   
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-device-orientation" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.5.0" />    
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />    
     <plugin name="cordova-plugin-splashscreen" spec="~5.0.2" />


    <platform name="android">
        <icon density="ldpi" src="www/res/icon/android/ldpi.png" />
        <icon density="mdpi" src="www/res/icon/android/mdpi.png" />
        <icon density="hdpi" src="www/res/icon/android/hdpi.png" />
        <icon density="xhdpi" src="www/res/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="www/res/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/xxxhdpi.png" />

        <splash src="www/res/screen/android/land-hdpi.png" density="land-hdpi" />
        <splash src="www/res/screen/android/land-ldpi.png" density="land-ldpi"/>
        <splash src="www/res/screen/android/land-mdpi.png" density="land-mdpi"/>
        <splash src="www/res/screen/android/land-xhdpi.png" density="land-xhdpi"/>
        <splash src="www/res/screen/android/land-xxhdpi.png" density="land-xxhdpi"/>
        <splash src="www/res/screen/android/land-xxxhdpi.png" density="land-xxxhdpi"/>
        <splash src="www/res/screen/android/port-hdpi.png" density="port-hdpi"/>
        <splash src="www/res/screen/android/port-ldpi.png" density="port-ldpi"/>
        <splash src="www/res/screen/android/port-mdpi.png" density="port-mdpi"/>
        <splash src="www/res/screen/android/port-xhdpi.png" density="port-xhdpi"/>
        <splash src="www/res/screen/android/port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="www/res/screen/android/port-xxxhdpi.png" density="port-xxxhdpi"/>
        
    </platform>  


    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
   
</widget>
